<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:outlineSpotShadowColor="@color/mainblue"
        app:cardCornerRadius="15dp">

        <ImageView
            android:id="@+id/imageDetails"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/eng_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ingilizce"
            android:textColor="@color/mainblue"
            android:fontFamily="@font/alata"
            android:textSize="21sp"
            android:textStyle="bold"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/tr_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ingilizce"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/alata"
            android:textColor="@color/blackmain"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="115dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/speakButtonDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTintMode="src_atop"
            app:fabCustomSize="40dp"
            android:backgroundTint="@color/mainblue"
            android:src="@drawable/ic_speak2"
            app:borderWidth="0dp"
            app:fabSize="normal"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"/>


    </androidx.cardview.widget.CardView>

</LinearLayout>